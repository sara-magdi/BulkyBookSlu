@model List<Product>

<div class="Card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="p-0 text-white py-2">Product List</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"> Add New Product</i>
                </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>ListPrice</th>
            <th>Author</th>
            <th>Category</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Author</td>
                <td></td>
               
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>