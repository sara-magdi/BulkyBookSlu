@model Product


<div class="Card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="p-0 text-white py-2">Edit Category</h2>

            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <form asp-action="Edit">
            <div class="border p-3 mt-4">

                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-floating  py-2 col-12 ">
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <label class="ms-2" asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="ListPrice" type="number" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="Price" type="number" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="Price50" type="number" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-floating  py-2 col-12">
                    <input asp-for="Price100" type="number" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
