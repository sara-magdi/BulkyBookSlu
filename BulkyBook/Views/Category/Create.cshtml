@model Category


<form method="post">
    <div class="container">
        <div class="border p-3 mt-4">
            <div classs="row pb-2">
                <h2 class="p-0">Create Category</h2>
                <hr />
            </div>
            <div class="row mb-3 p-1">
                <label class="p-0" asp-for="Name"></label>
                <input asp-for="Name"  class="form-control" />
            </div>
            <div class="row mb-3 p-1">
                <label class="p-0" asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder"  class="form-control" />
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit"  class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary form-control"
                    >Back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
