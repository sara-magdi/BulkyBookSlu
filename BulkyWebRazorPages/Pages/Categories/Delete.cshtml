@page
@model BulkyWebRazorPages.Pages.Categories.DeleteModel
@{
}

<form asp-action="Delete">
    <div class="container">
        <div class="border p-3 mt-4">
            <div classs="row pb-2">
                <h2 class="p-0">Delete Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="row mb-3 p-1">
                <label class="p-0" asp-for="Category.Name"></label>
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>

            <div class="row mb-3 p-1">
                <label class="p-0" asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            </div>

            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6">
                    <a  asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
