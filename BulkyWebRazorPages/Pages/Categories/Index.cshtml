@page
@model BulkyWebRazorPages.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary">
                <i class="bi bi-plus-circle"> Add New Category</i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
        @foreach (var obj in Model.CategoryList.OrderBy(e=>e.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a  asp-page="/Categories/Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a  asp-page="/Categories/Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>